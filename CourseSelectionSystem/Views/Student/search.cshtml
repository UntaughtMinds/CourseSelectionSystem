
@{
    ViewData["Title"] = "search";
    var studentInf = ViewData["studentInf"] as List<StudentInf>;
}

    <section>
        <div class="container-fluid">
            <header>
                <h1 class="h3 display">学生查询</h1>
            </header>
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <form class="form-inline" action="/Student/search" method="get">
                            <div class="form-group">
                                <input id="inlineFormInput" type="text" placeholder="学生学号" class="mr-3 form-control" name="id">
                            </div>
                            <div class="form-group">
                                <input type="submit" value="查询" class="mr-3 btn btn-primary">
                            </div>
                        </form>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>学号</th>
                                        <th>姓名</th>
                                        <th>班级</th>
                                        <th>已获学分</th>
                                        <th>已选课程</th>
                                        <th>详情</th>
                                        <th>删除</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in studentInf)
                                    {
                                        <tr>
                                            <th scope="row">@item.Id</th>
                                            <td>@item.Name</td>
                                            <td>@item.Class</td>
                                            <td>@item.Credit</td>
                                            <td>
                                                @foreach (var name in item.CourseName)
                                                {
                                                    @name@:&nbsp
                                                }
                                            </td>
                                            <td>
                                                <form action="/Student/change" method="post">
                                                    <input type="text" name="id" style="display: none;" value="@item.Id">
                                                    <input type="submit" value="修改" class="mr-3 btn btn-primary">
                                                </form>
                                            </td>
                                            <td>
                                                <form action="/Student/delete" method="get">
                                                    <input type="text" name="id" style="display: none;" value="@item.Id">
                                                    <input type="submit" value="删除" class="mr-3 btn btn-danger">
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
