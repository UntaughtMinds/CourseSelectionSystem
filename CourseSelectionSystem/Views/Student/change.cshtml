
@{
    ViewData["Title"] = "change";
    var oldInf = (StudentInf)ViewData["oldInf"];
    var name = (string)ViewData["name"];
    var flag = (bool)ViewData["flag"];
}

    <section>
        <div class="container-fluid">
            <header>
                <h1 class="h3 display">修改学生信息</h1>
            </header>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form class="form-inline " method="post">
                            <div class="form-group">
                                <input id="inlineFormInput" type="text" placeholder="学生学号" class="mr-3 form-control" name="id">
                            </div>
                            <div class="form-group">
                                <input type="submit" value="查询" class="mr-3 btn btn-primary">
                            </div>
                        </form>
                    </div>
                    @if (oldInf != null)
                    {
                        <div class="card-body">
                            <form class="form-horizontal" method="post">
                                <div class="form-group row">
                                    <input type="text" name="id" style="display: none;" value="@oldInf.Id">
                                    <label class="col-sm-2 form-control-label">学生姓名</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="Name" value="@oldInf.Name" placeholder="null">
                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="form-group row">
                                    <label class="col-sm-2 form-control-label">班级</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="Class" value="@oldInf.Class" placeholder="null">
                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="form-group row">
                                    <div class="col-sm-4 offset-sm-2">
                                        <button type="submit" class="btn btn-primary">提交</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
