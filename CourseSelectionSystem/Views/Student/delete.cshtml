
@{
    ViewData["Title"] = "delete";
    var flag = (bool)ViewData["flag"];
    var id = (int)ViewData["id"];
}

    <section>
        <div class="container-fluid">
            <header>
                <h1 class="h3 display">删除学生</h1>
            </header>
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <form class="form-inline" action="/Student/delete" method="get">
                            <div class="form-group">
                                <input id="inlineFormInput" type="text" placeholder="学生学号" class="mr-3 form-control" name="id">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-danger">删除</button>
                            </div>
                        </form>
                        @if (flag)
                        {
                            <div>学生已成功删除</div>
                        }
                        else if (id != 0)
                        {
                            <div>学生删除失败</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

