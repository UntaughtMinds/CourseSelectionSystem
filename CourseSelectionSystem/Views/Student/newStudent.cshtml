
@{
    ViewData["Title"] = "newStudent";
    var name = (string)ViewData["name"];
    var flag = (bool)ViewData["flag"];
}

<section>
    <div class="container-fluid">
        <header>
            <h1 class="h3 display">新建学生</h1>
        </header>
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form class="form-horizontal" method="post">
                        <div class="form-group row">
                            <label class="col-sm-2 form-control-label">学生姓名</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="Name">
                            </div>
                        </div>
                        <div class="line"></div>
                        <div class="form-group row">
                            <label class="col-sm-2 form-control-label">班级</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="Class">
                            </div>
                        </div>
                        <div class="line"></div>
                        <div class="form-group row">
                            <div class="col-sm-4 offset-sm-2">
                                <button type="submit" class="btn btn-primary">提交</button>
                            </div>
                        </div>
                    </form>
                    @if (flag)
                    {
                        <a>学生已成功添加</a>
                    }
                    else if (name != null)
                    {
                        <a>学生添加失败</a>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form class="form-horizontal" method="post" action ="/Student/upload" enctype="multipart/form-data">
                        <div class="form-group row">
                            <label class="col-sm-2 form-control-label">上传CSV</label>
                            <div class="col-sm-10">
                                <input type="file" class="form-control" name="csvfile" accept=".csv">
                            </div>
                        </div>
                        <div class="line"></div>
                        <div class="form-group row">
                            <div class="col-sm-4 offset-sm-2">
                                <button type="submit" class="btn btn-primary">上传</button>
                            </div>
                        </div>
                    </form>
                    @if (flag)
                    {
                        <a>学生已成功添加</a>
                    }
                    else if (name != null)
                    {
                        <a>学生添加失败</a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
