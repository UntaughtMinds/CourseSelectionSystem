
@{
    ViewData["Title"] = "newCourse";
    var name = (string)ViewData["name"];
    var flag = (bool)ViewData["flag"];
}


    <section>
        <div class="container-fluid">
            <header>
                <h1 class="h3 display">新建课程</h1>
            </header>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form class="form-horizontal" action="/Course/newCourse" method="post">
                            <div class="form-group row">
                                <label class="col-sm-2 form-control-label">课程名</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="Name">
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label class="col-sm-2 form-control-label">学分</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="Credit">
                                </div>
                            </div>
                            <div class="line"></div>
                            <div class="form-group row">
                                <label class="col-sm-2 form-control-label">课程类别<br></label>
                                <div class="col-sm-10">
                                    <div>
                                        <input id="optionsRadios1" type="radio" checked="" value="1" name="IsElective">
                                        <label for="optionsRadios1">选修</label>
                                    </div>
                                    <div>
                                        <input id="optionsRadios2" type="radio" value="0" name="IsElective">
                                        <label for="optionsRadios2">必修</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-4 offset-sm-2">
                                    <button type="submit" class="btn btn-primary">提交</button>
                                </div>
                            </div>
                        </form>
                        @if (flag)
                        {
                            <a>课程已成功添加</a>
                        }
                        else if (name != null)
                        {
                            <a>课程添加失败</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
